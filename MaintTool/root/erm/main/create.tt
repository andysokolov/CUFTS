[% USE url %]

<form name="erm-create" id="erm-create" method="post">

 <fieldset>
  <legend>New ERM Main Record</legend>

  <div class="field">
   <div class="data">
    <label for="erm-create-key">Record identifier</label><input id="erm-create-key" name="key" value="">
   </div>
   <div class="help">
    This unique identifier is used to find the right ERM record when attaching to resource or title records.
   </div>
  </div>

  <div class="field">
   <div class="data">
    <label for="erm-create-name">Resource name</label><input id="erm-create-name" name="name" value="">
   </div>
   <div class="help">
    This is the main resource name displayed to the public.  Alternate names can be added later.
   </div>
  </div>

  <input type="submit" name="save" value="save" />
  <input type="submit" name="cancel" value="cancel" />

 </fieldset>

</form>
