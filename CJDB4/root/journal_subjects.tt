[% SET journal_subjects = journal.subjects_rs %]
[% IF journal_subjects.count > 0 %]
  <div id="subjects" class="details">
    <h3>[% c.loc( 'Subjects' ) %]</h3>
    <ul>
    [% WHILE ( subject = journal_subjects.next ) %]
      <li><a href="">[% subject.subject | html %]</a></li>
    [% END %]
    </ul>
  </div> <!-- subjects -->
[% END %]
